<div class="container">
  <div class="row">
    <div class="col-md-12">
    <% @tasks.each do |task| %>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= task.title %></td>
            <td><%= task.body %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h2>New Task</h2>
      
      <%= form_with model: @task do |f| %>
      <div class="form-group">
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_area :body, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Create Task', class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>



